{
  "name": "mina-ocv",
  "private": true,
  "workspaces": [
    "web/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.26.0"
  },
  "scripts": {
    "clean": "find . -type d \\( -name node_modules -o -name .next -o -name .swc -o -name .storybook-dist -o -name target \\) -exec rm -rf {} +",
    "cargo:clippy": "cargo make --cwd ./server clippy",
    "cargo:generate": "typeshare ./server --lang=typescript --output-file=./web/models/generated.ts",
    "cargo:make": "cargo make --cwd ./server --profile ci-flow",
    "cargo:run": "cargo run --bin mina-ocv-server --release",
    "cargo:test": "cargo make --cwd ./server test",
    "docker": "docker-compose --profile all up",
    "docker:build": "docker-compose build",
    "docker:db": "docker-compose up --build db",
    "docker:server": "docker-compose up --build server",
    "docker:server-db": "docker-compose --profile server-db up",
    "docker:web": "docker-compose up --build web",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "playwright": "pnpx playwright test",
    "web": "dotenv -- pnpm --filter mina-ocv-web $1"
  },
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-playwright": "^0.12.0",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-storybook": "0.6.8",
    "eslint-plugin-unused-imports": "2.0.0",
    "prettier": "^2.8.3"
  }
}
